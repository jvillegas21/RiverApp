{
  "name": "rivrwatch-app",
  "version": "1.0.0",
  "description": "RivrWatch - Real-time flood detection and prediction app",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install"
  },
  "keywords": [
    "flood",
    "detection",
    "weather",
    "rivers",
    "safety"
  ],
  "author": "RivrWatch Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@tippyjs/react": "^4.2.6",
    "@types/react": "^18.2.34",
    "@types/react-dom": "^18.2.15",
    "axios": "^1.10.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.1.15",
    "serverless-http": "^3.2.0",
    "uuid": "^11.1.0"
  },
  "overrides": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
